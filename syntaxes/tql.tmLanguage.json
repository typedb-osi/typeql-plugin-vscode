{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TypeQL",
	"file_extensions": [
		"tql"
	],
	"patterns": [
		{
			"include": "#storage"
		},
		{
			"include": "#keyword"
		},
		{
			"include": "#support"
		},
		{
			"include": "#string-double-quoted"
		},	
		{
			"include": "#string-single-quoted"
		},	
		{
			"include": "#escaped-char"
		},
		{
			"include": "#constant"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#comment"
		}
	],
	"repository": {
		"storage": {
			"patterns": [
				{
					"name": "storage.type.tql",
					"match": "\\b(thing|entity|attribute|relation|role)(?!-)\\b"
				},
				{
					"name": "storage.modifier.tql",
					"match": "\\b(string|long|double|boolean|datetime)(?!-)\\b"
				}
			]
		},
		"keyword": {
			"patterns": [
				{
					"name": "keyword.control.tql",
					"match": "\\b(?!.*-.\\s)(define|undefine|match|get|insert|delete|offset|limit|group|sort|asc|desc|abstract|as|iid|type|isa|isa!|sub|sub!|owns|has|plays|relates|value|regex|rule|when|then)(?!-)\\b"
				},
				{
					"name": "keyword.operator.words.tql",
					"match": "\\b(or|not|like|is|contains)\\b"
				},
				{
					"name": "keyword.operator.characters.tql",
					"match": ">=|<=|>|<|==|=|!="
				},
				{
					"name": "keyword.annotations.tql",
					"match": "(@\\w+)\\b"
				}
			]
		},
		"support": {
			"patterns": [
				{
					"name":"support.function.tql",
					"match":"\\b(count|sum|max|min|mean|median|std)(?!-)\\b"
				}
			]
		},
		"string-double-quoted": {
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"include": "#escaped-char"
				}
			],
			"name": "string.tql"
		},
		"string-single-quoted": {
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"include": "#escaped-char"
				}
			],
			"name": "string.tql"
		},
		"escaped-char" : {
			"name": "constant.character.escape.tql",
			"patterns": [
				{
					"match": "\\\\(x\\h{2}|n|r|t|0|\"|''|\\\\|u\\{\\h{1,6}\\})"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"name":"constant.language.tql",
					"match":"\\b(true|false)(?!-)\\b"
				},
				{
					"name":"constant.numeric.tql",
					"match": "[-+]?\\d+(\\.\\d+)?"
				}
			]
		},
		"variables": {			
			"patterns": [
				{
					"match": "\\$\\w+",
					"captures": {
						"0": {
							"name": "variable.parameter.tql"
						}
					}
				},
				{
					"match": "(-[a-z_\\x{7f}-\\x{ff}][a-z0-9_\\x{7f}-\\x{ff}]*)+",
					"name": "invalid.illegal.tql"
				}
			]
		},
		"comment": {
			"patterns": [
				{
					"match": "#.*",
					"name": "comment.tql"
				}
			]
		}
	},
	"scopeName": "source.tql"
}